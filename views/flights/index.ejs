<%- include('../partials/header') %>
  
      <h2 class="heading">Flight List</h2>
  <table class="table table-striped table-bordered table-hover">
    <thead class="tableHeadings">
      <div>
      <th>Airline</th>
      <th>AirPort</th>
      <th>Flight Number</th>
      <th>Departure</th>
    </div>
      <th>Now Flying</th>
      <th>Flight Details</th>
    </thead>
    <tbody >
    <% flights.forEach(function(flight) { %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= flight.airport %></td>
        <td><%= flight.flightNo %></td>
        <td><%= flight.departs %></td>
        
        <!-- combine departs and now flying yes or no into an if statement -->
        <td><%= flight.nowFlying ? 'Yes' : 'No' %></td>
        <td><a href="/flights/<%= flight._id %>"><button class="btn btn-mini btn-primary" type="button">DETAILS</button></a></td>
      </tr>
    <% }) %>
    
    <%- include('../partials/footer') %>

