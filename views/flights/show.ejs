<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Mongoose Flights</title>
</head>
<body>

    <section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>

  <div>AirPort: </div>
  <div><%= flight.airport %></div>

  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>

  <div>Departs: </div>
  <div><%= flight.departs %></div>

  <div>Now Flying: </div>
  <div><%= flight.nowFlying ? 'Yes' : 'No' %></div>

  <div>Ticket:</div>

</section>

<!-- <form id="add-ticket" action="/flights/<%= flight._id%>/tickets" method="POST"> -->
  <label for="seat">Seat No.</label>
    <%- tickets.map(p => 
      `<option value="${p._id}">${p.seat}</option>`
    ).join('') %>
    <br>  
    <label for="price">Ticket Price</label>
    <%- tickets.map(p => 
      `<option value="${p._id}">${p.price}</option>`
    ).join('') %>

  <a href="/tickets/<%= flight._id %>/new"
  <%- title === 'Add Ticket' ? 'class="active"' : '' %>>
  ADD Ticket</a>
<!-- </form> -->


<br><br><h2>Destinations</h2>
<form id="add-review-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <!-- <label>Destination:</label>
  <textarea name="destination"></textarea> -->
  <br>
  <label>Arrival:
        <input type="datetime-local" name="arrival"> 
  </label>
  <br>
  <label>Airport:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DAL">DAL</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="SEA">SEA</option>
    </select>
  </form>
  <hr>
  <input type="submit" value="Add Destination">

    <% if (flight.destination) { %>
        <table>
          <thead>
            <tr>
              <th>Airport</th>
              <th>Arrival</th>
              <!-- <th>Destination</th> -->
            </tr>
          </thead>
          <tbody>
            <% flight.destination.forEach(function(r) { %>
              <tr>
                <td><%= r.airport %></td>
                <td><%= r.arrival %></td>
                <td><%= r.destination %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>No destinations Yet</h5>
      <% } %>
</label><br>

</body>
</html>