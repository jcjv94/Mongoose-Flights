<%- include('../partials/header') %>

  <h2>Flight Details</h2>

  <section class="show-page">
  <div class= "showItem">Airline: </div>
  <div class= "showItem"><%= flight.airline %> | </div>

  <br><br>
  <div class= "showItem">AirPort: </div>
  <div class= "showItem"><%= flight.airport %> | </div>

  <br><br>
  <div class= "showItem">Flight Number: </div>
  <div class= "showItem"><%= flight.flightNo %> | </div>

  <br><br>
  <div class= "showItem">Departs: </div>
  <div class= "showItem"><%= flight.departs %> | </div>

  <br><br>
  <div class= "showItem">Now Flying: </div>
  <div class= "showItem"><%= flight.nowFlying ? 'Yes' : 'No' %></div>

  <!-- <div>Ticket:</div> -->

</section>

<hr>

<section id="ticketBtn">
<!-- <form id="add-ticket" action="/flights/<%= flight._id%>/tickets" method="POST"> -->
  <label for="seat">Seat No.</label>
    <%- tickets.map(p => 
      `<option value="${p._id}">${p.seat} - ${p.price}</option>`
    ).join('') %>
    <br>  
   

  <a href="/flights/<%= flight._id %>/tickets/new"
  <%- title === 'Add Ticket' ? 'class="active"' : '' %>>
  Add Ticket</a>
<!-- </form> -->

</section>


<br><br><h3>Destinations</h2>
  
<form id="add-review-form" method="POST"
  action="/flights/<%= flight._id %>/destinations">
  <!-- <label>Destination:</label>
  <textarea name="destination"></textarea> -->
  <br>
  
  
  <label>Arrival:
        <input type="datetime-local" name="arrival"> 
  </label>
  <br>
  <label>Airport:
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DAL">DAL</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="SEA">SEA</option>
    </select>
  </form>
  <hr>
  <input id="addDestBtn" type="submit" value="Add Destination">
  <br>

    <% if (flight.destination) { %>
        <table class="table table-striped table-bordered table-hover table-condensed">
          <thead>
            <tr>
              <th>Airport</th>
              <th>Arrival</th>
              <!-- <th>Destination</th> -->
            </tr>
          </thead>
          <tbody>
            <% flight.destination.forEach(function(r) { %>
              <tr>
                <td><%= r.airport %></td>
                <td><%= r.arrival %></td>
                <!-- <td><%= r.destination %></td> -->
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>No destinations Yet</h5>
      <% } %>
</label><br>

<%- include('../partials/footer') %>